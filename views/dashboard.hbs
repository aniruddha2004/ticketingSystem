<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/dashboard.css" rel="stylesheet">
</head>
<body>
    {{> navbar }}

    <div class="container mt-5">
        <h1 class="text-center">Dashboard</h1>

        <!-- Create Ticket Form -->
        <div class="card mt-4">
            <div class="card-header">
                <h2>Create a Ticket</h2>
            </div>
            <div class="card-body">
                <form action="/tickets/create" method="POST">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" id="title" name="title" placeholder="Enter ticket title" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="3" placeholder="Describe the issue" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Create</button>
                </form>
            </div>
        </div>

        <!-- My Tickets Section -->
        <div class="mt-5">
            <h2>My Tickets</h2>
            {{#if tickets.length}}
            <ul class="list-group mt-3">
                {{#each tickets}}
                <li class="list-group-item">
                    <strong>{{title}}</strong> - {{description}} (Status: {{status}})
                    <ul class="mt-2">
                        {{#each comments}}
                        <li class="text-muted"><small>{{text}} - {{author}} ({{createdAt}})</small></li>
                        {{else}}
                        <li class="text-muted"><small>No comments yet.</small></li>
                        {{/each}}
                    </ul>
                </li>
                {{/each}}
            </ul>
            {{else}}
            <p class="text-muted mt-3">You have no tickets yet.</p>
            {{/if}}
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
